{
  "name": "LinkedIn",
  "version": "1.0.0",
  "description": "LinkedIn clone",
  "main": "index.js",
  "scripts": {
    "watch": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server --browser=firefox",
    "start": "npm-run-all --parallel devserver watch",
    "compile": "node-sass sass/main.scss css/style.comp.css",
    "prefix": "postcss --use autoprefixer -b \"last 10 versions\" css/style.comp.css -o css/style.prefix.css",
    "compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build": "npm-run-all compile prefix compress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aalig/linkedIn.git"
  },
  "author": "Abdurahman A Gugssa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aalig/linkedIn/issues"
  },
  "homepage": "https://github.com/aalig/linkedIn#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
